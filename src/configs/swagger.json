        "tags": [
          "Authentication"
        ],
        "summary": "Register",
        "description": "Register user with multipart/form-data (includes image)",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "Test"
                },
                "email": {
                  "type": "string",
                  "example": "test@site.com"
                },
                "password": {
                  "type": "string",
                  "example": "test@123"
                },
                "profileImageUrl": {
                  "type": "string",
                  "example": "https://www.image.com/image.jpg"
                },
                "adminInviteToken": {
                  "type": "string",
                  "example": "******"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
